{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default (Release)",
      "description": "Release build with tests off and warnings enabled",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "DSTL_CXX_STANDARD": "17",
        "DSTL_ENABLE_WARNINGS": "ON",
        "BUILD_TESTING": "OFF",
        "CMAKE_INSTALL_PREFIX": "$env{HOME}/.local"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug (Tests On)",
      "description": "Debug build with warnings and tests enabled",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default-build",
      "displayName": "Build (Release)",
      "configurePreset": "default"
    },
    {
      "name": "debug-build",
      "displayName": "Build (Debug)",
      "configurePreset": "debug"
    },
    {
      "name": "install",
      "displayName": "Install DSTL",
      "description": "Runs the install target so IDEs (e.g. VS Code) can expose it directly",
      "configurePreset": "default",
      "targets": [
        "install"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "default-tests",
      "displayName": "CTest (Debug)",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
